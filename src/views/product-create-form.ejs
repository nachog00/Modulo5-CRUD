<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Formulario de creaci√≥n'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Formulario de creaci√≥n de productos</h2>
			</div>
		</div>
		<div class="col-12">

			<!-- FORMULARIO -->
			<form action="/products" method="POST" enctype="multipart/form-data">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="Ej: Zapatillas Reebok" class="form-input" value="<%= locals.old && old.name %>" >
						<% if (locals.errors && errors.name) { %>
							<p class="feedback">üñï <%= errors.name.msg %> </p>
						<% } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="Ej: 5678" class="form-input" value="<%= locals.old && old.price %>">
						<% if (locals.errors && errors.price) { %>
							<p class="feedback">üñï <%= errors.price.msg %> </p>
						<% } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" placeholder="Ej: 15" class="form-input" value="<%= locals.old && old.discount %>" >
						<% if (locals.errors && errors.discount) { %>
							<p class="feedback">üñï <%= errors.discount.msg %> </p>
						<% } %>
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categor√≠a:</label>
						<select name="category" id="category" class="form-input">
							<!-- <option value="">Eleg√≠</option> -->
							<option value="in-sale" <% if (locals.old && locals.old.category == "in-sale") { %> selected <% } %> >En oferta</option>
							<option value="visited" <% if (locals.old && locals.old.category == "visited") { %> selected <% } %> >√öltimos agregados</option>
						</select>
					</div>
					<div class="col-12 custom-file">
						<label for="image" class="form-label">Imagen:</label>
						<input type="file" name="image" id="image" class="custom-file-input">
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipci√≥n:</label>
						<textarea name="description" id="description" class="form-input"><%= locals.old && old.description %></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>


		</div>

	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>